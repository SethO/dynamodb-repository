{
  "name": "@setho/dynamodb-repository",
  "version": "0.7.2",
  "description": "DynamoDB repository for hash-key and hash-key/range indexed tables. Designed for Lambda use. Handles nicities like created and updated timestamps and default id creation.",
  "license": "MIT",
  "repository": "setho/dynamodb-repository",
  "engines": {
    "node": ">=8.1.0"
  },
  "scripts": {
    "test": "npm run lint && npm run test:unit",
    "test:unit": "npx jest unit.test --silent",
    "test:int": "npx jest int.test --silent",
    "lint": "eslint . --ignore-pattern node_modules/ --ignore-pattern coverage/",
    "prepublishOnly": "npm test && npm run test-integration",
    "preversion": "npm test && npm run test-integration",
    "prepare": "husky install",
    "smart-publish": "npx publish-if-not-exists"
  },
  "main": "index.js",
  "files": [
    "index.js",
    "lib/**/!(*.test.js)",
    "README.md"
  ],
  "keywords": [
    "dynamodb",
    "repository",
    "lambda",
    "setho",
    "seth"
  ],
  "dependencies": {
    "@aws-sdk/lib-dynamodb": "^3.309.0",
    "@hapi/joi": "^17.1.1",
    "http-errors": "^2.0.0",
    "ulid": "^2.3.0"
  },
  "devDependencies": {
    "@aws-sdk/client-dynamodb": "^3.309.0",
    "@faker-js/faker": "^7.6.0",
    "@swc/core": "^1.3.46",
    "@swc/jest": "^0.2.24",
    "aws-sdk-mock": "5.8.0",
    "eslint": "8.38.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "27.2.1",
    "eslint-plugin-no-only-tests": "^3.1.0",
    "husky": "^8.0.3",
    "jest": "29.5.0",
    "jest-extended": "^3.2.4",
    "lint-staged": "^13.2.1",
    "prettier": "^2.8.7",
    "publish-if-not-exists": "^1.1.0",
    "sinon": "15.0.3"
  },
  "lint-staged": {
    "*.js": "eslint",
    "*.{js,md}": "prettier --write --ignore-path .gitignore"
  }
}
